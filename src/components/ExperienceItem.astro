---
interface Props {
  title: string;
  description: string;
  date: string;
  link?: string;
}

const { title, description, date, link } = Astro.props;
---

<div
  class="absolute w-2 h-2 bg-green-300 rounded-full mt-2 -start-1 dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-green-300">{date}</time>
<h3 class="text-lg font-semibold text-white my-2">
  {title}
</h3>
<p class="mb-4 text-base font-thin text-gray-200 text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg"
    >
      Learn more{" "}
    </a>
  )
}
